<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>JspPrevent</filter-name>
        <filter-class>filter.JspPrevent</filter-class>
    </filter>
    <filter>
        <filter-name>Prevent</filter-name>
        <filter-class>filter.Prevent</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>JspPrevent</filter-name>
        <url-pattern>/content/*</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>Prevent</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EntryDetail</servlet-name>
        <servlet-class>controller.EntryDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OverviewController</servlet-name>
        <servlet-class>controller.OverviewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AboutMeController</servlet-name>
        <servlet-class>controller.AboutMeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EntryDetail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OverviewController</servlet-name>
        <url-pattern>/overview</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AboutMeController</servlet-name>
        <url-pattern>/aboutme</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
